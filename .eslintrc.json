{
  "extends": ["airbnb", "plugin:mocha/recommended"],
  "plugins": ["mocha"],
  "parser": "babel-eslint",
  "env": {
    "jest": true,
    "browser": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["*-tests.js"],
      "rules": {
        "no-unused-expressions": 0,
        "jest/valid-expect": 0
      }
    }
  ]
}
